doctype html
html
    head
        title= title
        link(rel='stylesheet', href='./lib/bootstrap-3.3.2/css/bootstrap.min.css')
        script(src='./lib/jquery-1.11.2.min.js')
        script(src='./lib/bootstrap-3.3.2/js/bootstrap.min.js')
    body
        .navbar.navbar-inverse.navbar-static-top(role='navigation')
            .container
                .navbar-header
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') Project name
                .collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li.active
                            a(href='/') Home
                        if user
                            li
                                a(href='/logout') Logout
                        else
                            li
                                a(href='/login') Login
                            li
                                a(href='/signup') Signup
        .container
            if messages.error
                .alert.alert-error
                    div= messages.error
            if messages.info
                .alert.alert-info
                    div= messages.info
            if messages.success
                .alert.alert-success
                    div= messages.success
            block content

